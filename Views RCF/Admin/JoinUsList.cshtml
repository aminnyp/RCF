@model Mutualex.Blog


@{
    ViewBag.Title = "Join Us List";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    TempData["JoinUs"] = "class=" + "active";

    TempData["PageTitle"] = "Join Us List";
}

@if (TempData["MSG"] != null)
{
    <div class="alert alert-info alert-dismissable">
        <button type="button" data-dismiss="alert" aria-hidden="true" class="close">×</button>
        <strong>@TempData["MSG"]</strong>
    </div>
}

<div class="page-content">
    <div class="row">


        <div class="col-lg-12">
            <div class="portlet box panel panel-grey">
                <div class="panel-heading">
                    Join Us List
                </div>
                <div class="portlet-body">
                    <div class="row mbm">
                        <div class="col-lg-12">
                            <div class="table-responsive">
                                <table id="table_id" class="table table-hover table-striped table-bordered tablesorter">
                                    <thead>
                                        <tr>

                                            <th><span data-toggle="tooltip" data-placement="right" data-original-title="Review Title">Name</span></th>
                                            <th><span data-toggle="tooltip" data-placement="right" data-original-title="Review Title" >Contact No</span></th>
                                            <th><span data-toggle="tooltip" data-placement="right" data-original-title="Description">Email</span></th>
                                            <th><span data-toggle="tooltip" data-placement="right" data-original-title="On Date">Address</span></th>
                                            <th><span data-toggle="tooltip" data-placement="right" data-original-title="On Date">Message</span></th>
                                            @*<th><span data-toggle="tooltip" data-placement="right" data-original-title="On Date">Submit On</span></th>*@

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (Mutualex.JoinU item in ViewBag.ListJoinUs)
                                        {
                                            <tr>

                                                <td>@item.FirstName @item.LastName</td>
                                                <td>@item.ContNo</td>
                                                <td>@item.Email</td>
                                                <td>@item.Address</td>
                                                <td>@item.Message</td>
                                                @*<td>@Convert.ToDateTime(item.OnDate).ToString("dd-MM-yyyy | hh:mm:ss")</td>*@

                                            </tr>
                                        }
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="modal-stackable" tabindex="-1" role="dialog" aria-labelledby="modal-stackable-label" aria-hidden="true" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" data-dismiss="modal" aria-hidden="true" class="close">&times;</button>
                <h4 id="modal-stackable-label" class="modal-title"></h4>
            </div>
            <div class="modal-body">
                <div class="form" id="DetailsHM">

                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        function ChangeReviewStatus(_pid) {
            var url = "/Product/OpenChangeReviewStatusPopUp/" + _pid;
            $.get(url, { ID: _pid }, function (data) {
                $('#DetailsHM1').html(data);
            });
        }
    </script>



    <script src="/admin_assets/vendors/DataTables/media/js/jquery.dataTables.js"></script>
    <script src="/admin_assets/vendors/DataTables/media/js/dataTables.bootstrap.js"></script>
    <script src="/admin_assets/vendors/DataTables/extensions/TableTools/js/dataTables.tableTools.min.js"></script>
    <script src="/admin_assets/js/table-datatables.js"></script>

    <script src="/admin_assets/js/form-components.js"></script>
    <script type="text/javascript">
        // When the document is ready
        $(document).ready(function () {

            $('.input-daterange').datepicker({
                todayBtn: "linked"
            });

        });
