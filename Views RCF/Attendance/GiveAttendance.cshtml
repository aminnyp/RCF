                                                    <th>Name</th>
                                                    <th>Email</th>
                                                    <th>Phone</th>
                                                    <th>Attendance</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (Mutualex.Membership_reg i in ViewBag.Members)
                                                {
                                                    <tr>


                                                        @if (!string.IsNullOrEmpty(i.ImgUrl))
                                                        {
                                                            <td><img src="@i.ImgUrl.Replace("~", "")" style="height:85px;" /></td>
                                                        }

