                                                            <input type="radio" @*id="id_@i.Srno"*@ name="attn" onclick="attendance('@i.Srno','Tardy');" value="Tardy" /> Tardy
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
