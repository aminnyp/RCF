@model Mutualex.AttandenceMaster
@{
    ViewBag.Title = "Attendance";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    TempData["Attendance"] = "class=" + "active";

    TempData["AttendanceMaster"] = "class=" + "active";

    TempData["PageTitle"] = "Attendance Master";

}

@if (TempData["MSG"] != null)
{
    <div class="alert alert-info alert-dismissable">
        <button type="button" data-dismiss="alert" aria-hidden="true" class="close">×</button>
        <strong>@TempData["MSG"]</strong>
    </div>
}
<div class="page-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-blue">
                <div class="panel-heading">
                    Attendance
                </div>
                <div class="panel-body pan">
                    @using (Html.BeginForm("Index", "Attendance", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "form-horizontal" }))
                    {
                        <div class="form-body pal">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>Create Date</label>
                                        @Html.TextBoxFor(model => model.Date, new { @id = "birthDate", @placeholder = "Date", @type = "date", @class = "form-control", @required = "required" })
                                    </div>
                                    <div class="col-md-6">
                                        <label>Select Member</label>
                                        @*@Html.DropDownListFor(model => model.MemberName, new SelectList(ViewBag.MemberList, "Key", "Value"), "", new { @class = "form-control" })*@
                                        @Html.DropDownListFor(model => model.MemberID, ViewBag.MemberList as SelectList, "---SELECT---", (new { @placeholder = "Members", @class = "form-control", @required = "required" }))
                                    </div>
                                </div>
                            </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label>Choose Class</label>
                                            @Html.DropDownListFor(model => model.AttendanceFor,
                                        new List<SelectListItem>
                                        {
                                            new SelectListItem { Text="---SELECT---", Value=""},
                                            new SelectListItem { Text="Weekly Meeting", Value="Weekly"},
                                            new SelectListItem { Text="Monthly Meeting", Value="Monthly"},
                                             new SelectListItem { Text="Yearly Meeting", Value="Yearly"},
                                             new SelectListItem { Text="Others Meeting", Value="Other"}
                                        }
                                        , new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>

                            

                            <div class="form-group">
                                <div class="col-md-3">
                                    <input id="Submit1" type="submit" class="btn btn-success " value="SUBMIT" />

                                </div>
                            </div>
                        </div>
                    }

