@model Mutualex.Donation


@{
    ViewBag.Title = "Donation List";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    TempData["Donation"] = "class=" + "active";    

    TempData["PageTitle"] = "Donation List";
}

@if (TempData["MSG"] != null)
{
    <div class="alert alert-info alert-dismissable">
        <button type="button" data-dismiss="alert" aria-hidden="true" class="close">×</button>
        <strong>@TempData["MSG"]</strong>
    </div>
}

<div class="page-content">
    <div class="row">


        <div class="col-lg-12">
            <div class="portlet box panel panel-grey">
                <div class="panel-heading">
                    Donation List
                </div>
                <div class="portlet-body">
                    <div class="row mbm">
                        <div class="col-lg-12">
                            <div class="table-responsive">
                                <table id="table_id" class="table table-hover table-striped table-bordered tablesorter">
                                    <thead>
                                        <tr>
     
                                            <th><span>Donate On</span></th>
                                            <th><span>Name</span></th>
                                            <th><span>Email Id</span></th>
                                            <th><span>Connact No</span></th>                                           
                                            <th><span>Amount</span></th>
                                            <th><span>Donate For</span></th>
                                            <th><span>Payment Type</span></th>
                                            <th><span>Donation Type</span></th>
                                            <th><span>Transaction Status</span></th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (Mutualex.Donation item in ViewBag.DonationList)
                                        {
                                            <tr>
                                                <td>@item.Donate_On</td>
                                                <td>@item.Name</td>
                                                <td>@item.EmailId</td>
                                                <td>@item.ContNo</td>                                               
                                                <td>@item.Amount</td>
                                                <td>@item.DonateFor</td>
                                                <td>@item.PaymentType</td>
                                                <td>@item.DonationType</td>
                                                <td>@item.Transaction_Status</td>
                                            </tr>
                                        }
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="modal-stackable" tabindex="-1" role="dialog" aria-labelledby="modal-stackable-label" aria-hidden="true" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" data-dismiss="modal" aria-hidden="true" class="close">&times;</button>
                <h4 id="modal-stackable-label" class="modal-title"></h4>
            </div>
            <div class="modal-body">
                <div class="form" id="DetailsHM">

                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        function ChangeReviewStatus(_pid) {
            var url = "/Product/OpenChangeReviewStatusPopUp/" + _pid;
            $.get(url, { ID: _pid }, function (data) {
                $('#DetailsHM1').html(data);
            });
        }
    </script>



